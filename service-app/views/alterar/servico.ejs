<!DOCTYPE html>
<div class="form-view">
  <label for="ativo">Estado do serviço: </label>
  <%- servico.situacao %>
  <br><br>
  <form method="post" action="/alterar/servico/<%- servico.id %>">
    <div id="div-cliente" class="form-group" style="width:300px">
      <label for="exampleInputCliente1">Código Cliente</label>
      <input type="text" class="form-control" value="<%- servico.id_cliente %>" id="inputCliente" name="clienteId" placeholder="Cliente" readOnly="true">
    </div>
    <div id="div-maquina" class="form-group" style="width:300px">
      <label for="exampleInputMaquina1">Código Máquina</label>
      <input type="text" class="form-control" value="<%- servico.id_maquina %>" id="inputMaquina" name="maquinaId" placeholder="Máquina" readOnly="true">
    </div>
    <div id="div-problema" class="form-group" style="width:300px">
      <label for="exampleInputProblem1">Descrição do Problema</label>
      <textarea class="form-control" rows="3" name="problema" id="inputProblema" readOnly="true" required>
        <%- servico.problema %>
      </textarea>
    </div>
    <div id="div-entrada" class="form-group" style="width:200px">
      <label for="exampleInputEntrada1">Data de Entrada</label>
      <input type="text" class="form-control" value="<%- servico.entrada %>" id="inputEntrada" name="entrada" readOnly="true">
    </div>
    <div id="div-saida" class="form-group" style="width:200px">
      <label for="exampleInputSaida1">Data de Saída</label>
      <input type="text" class="form-control" value="<%- servico.saida %>" id="inputSaida" name="saida" readOnly="true" required>
    </div>
    <div id="div-valor" class="form-group" style="width:200px">
      <label for="exampleInputValor1">Valor R$</label>
      <input type="number" step="0.01" min="0" class="form-control" value="<%- servico.valor %>" id="inputValor" name="valor" required>
    </div>
    <div id="div-erro">
      <% if (erro) { %>
        <%- erro %>
      <% } %>
    </div>
    <button type="submit" class="btn btn-default">Finalizar</button>
  </form>
</div>

<script>
$(document).ready(function() {
  $(".page-header").html("Ordem de Serviço Nº <%- servico.id %>");
});

</script>
