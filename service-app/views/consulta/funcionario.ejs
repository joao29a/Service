<!DOCTYPE html>
<form method="post" action="/consulta/funcionario">
  <input type="text" name="busca" value="<%- busca.nome %>" placeholder="Insira nome ou email">
  <input type="submit" value="Buscar">
  <br><label for="tipo">Tipo Funcionário:</label>
  <select name="tipo" id="select-tipo">
    <option value="Todos">Todos</option>
    <option value="Atendente">Atendente</option>
    <option value="Técnico">Técnico</option>
  </select>
  <br><label for="tipo">Autoridade:</label>
  <select name="autoridade" id="select-autoridade">
    <option value="Todos">Todos</option>
    <option value="1">Normal</option>
    <option value="0">Administrador</option>
  </select>

</form>
<br><h2>Lista</h2>
<% if (!erro) { %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Tipo funcionário</th>
        <th>Autoridade</th>
      </tr>
    </thead>
    <tbody>
    <% for (var i in data) { %>
      <% var j = i %>
      <tr>
        <th scope="row"><%- ++j %></th>
        <td><%- data[i].nome %></td>
        <td><%- data[i].email %></td>
        <td><%- data[i].tipo %></td>
        <% if (data[i].autoridade == 0) { %>
          <td>Administrador</td>
        <% } else { %>
          <td>Normal</td>
        <% } %>
      </tr>
    <% } %>
    </tbody>
  </table>
<% } else { %>
  <% erro %>
<% } %> 

<script>
  $(document).ready(function() {
    $("#consulta").attr("class", "active");
    $(".page-header").html("Consulta Funcionário");
    <% if (busca.tipo != undefined) { %>
      $("#select-tipo").val("<%- busca.tipo %>");
      $("#select-autoridade").val("<%- busca.autoridade %>");
    <% } %>
  });

</script>
